<div class='container'>
  <div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class='col-md-8 offset-md-1'>
          <h1>ジャンル一覧・追加用ページ</h1>

          <%= form_with url: admin_genres_path do |f| %>
            </br>
            <h4>ジャンル</h4>
            <%= f.text_field :name %>
            </br>
            <%= f.submit '追加', class: 'btn btn-primary' %>
          <% end %>

            <table>
              <thead>
                <tr>
                  <th>ジャンル</th><br/>
                  <th>状態</th>

                </tr>
              </thead>
              <tbody>
                <%# @genres.each do |genre| %>
                <tr>
                  <td><%= @genre.name %></td>
                  <td><%= link_to "編集", edit_genre_path(@genre.ids), class: 'btn btn-success' %></td>
                </tr>
                <%# end %>
              </tbody>
            </table>
          </div>
    </div>
  </div>