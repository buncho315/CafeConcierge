<div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class='col-md-8 offset-md-1'>
            <h1>ユーザーからの投稿一覧</h1>
            <table class = "table table-hover table-inverse">
              <thead>
                <tr>
                  <th>店名</th>
                  <th>投稿者名</th>
                  <th>コメント数</th>
                </thead>
              <tbody>
                <% @shops.each do |shop| %>
                <tr>
                  <td><%=link_to shop.title, admin_shop_path(shop.id) %></td>
                  <td><%= link_to shop.end_user.name, admin_end_user_path(shop.end_user.id) %><td>
                  <td><%= "#{shop.comments.count}コメント" %></td>
                    <!--#コメントにリンクは不要-->
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
</div>