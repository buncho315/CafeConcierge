<div class='container'>
  <div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class>
          <h1>検索結果表示ページ</h1>
          <table class="table table-hover table-inverse">
            <thead>
                <tr>
                  <th>店名</th>
                  <th>最寄り駅名</th>
                  <th>投稿者コメント</th>
                </tr>
            </thead>
            <tbody>
              <% @search_shops.each do |shop| %>
                <tr>
                  <td><%= link_to shop.title, public_shop_path(shop.id) %></td>
                  <td><%= shop.access %></td>
                  <td><%= shop.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
  </div>
</div>