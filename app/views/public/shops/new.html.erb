<div class='container'>
  <div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class='col-md-8 offset-md-1'>
          <h1>新規投稿画面</h1>

          <% if @shop.errors.any? %>
            <%= @shop.errors.count %>件のエラーが発生しました
            <ul>
              <% @shop.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @shop, url: public_shops_path do |f| %>
          <h4>店名</h4>
            <%= f.text_field :title %>
          <h4>トップに推したい店舗画像</h4>
            <%= f.file_field :image, accept: "image/*" %>
          <h4>最寄り駅</h4>
            <%= f.text_field :access %>
          <h4>店舗説明(300文字以内)</h4>
            <%= f.text_area :body %>
          <h4>ジャンル選択</h4>
          <div class="form-group">
          <%= f.label :genres %>
            <div class="checkbox">
              <%= collection_check_boxes(:shop, :genre_ids, Genre.all, :id, :name, include_hidden: false) do |g| %>
                <%= g.label {g.check_box + g.text} %>
              <% end %>
              </div>
          </div>
            <%#= f.fields_for :genres, @shop.genres.build do |ff| %>
              <%#= ff.collection_select :name, Genre.all, :id, :name %>
            <%# end %>
          <!--<h4>その他の写真５枚まで投稿可</h4>データ重くなるから項目削除-->
            <%= f.submit '投稿する' %>
            <% end %>
        </div>
  </div>
</div>