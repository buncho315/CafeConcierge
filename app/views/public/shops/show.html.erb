<div class='container'>
  <div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class='col-md-8 offset-md-1'>
            <h1>店舗詳細情報</h1>
            <table class = "table table-hover table-inverse">
              <thead>
                <tr>
                  <tr>投稿者名</tr>
                  <th>店名</th>
                  <th>投稿者の感想</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
              <tr>
                <% @shop.each do |shop| %>
                <td><%= shop.end_user.name %></td>
                <td><%= link_to shop.title, public_shop_path(shop.id) %></td>
                <td><%= shop.body %></td>
                <% end %>
              </tr>
              </tbody>
            </table>
        </div>
    </div>
</div>
