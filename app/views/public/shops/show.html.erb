<div class='container'>
  <div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class='col-md-8 offset-md-1'>
            <h1>店舗詳細情報</h1>
            <table class = "table table-hover table-inverse">
              <thead>
                <tr>
                  <th>投稿者名</th>
                  <th>店名</th>
                  <th>投稿者の感想</th>
                  <th>店舗写真</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
              <tr>
                <td><%= @shop.end_user.name %></td>
                <td><%= @shop.title %></td>
                <td><%= @shop.body %></td>
                <td>
                <% if @shop.image.attached? %>
                  <%= image_tag @shop.image, size: "200x200" %>
                <% else %>
                  <%= image_tag 'no_image', size: "200x200" %>
                <% end %>
                </td>
              </tr>
              </tbody>
              <!--#コメント用にtfoot仮置き-->
              <tfoot>
                <td>コメント件数:<%= @shop.comments.count %></td>
                  <% @shop.comments.each do |comment| %>
                    <%= comment.user.name %>
                    <%= comment.created_at.strftime('%Y/%m/%d') %><%#= comment.comment %>
                  <% end %>
              </tfoot>
              <!--#下は他ユーザーがこの店舗についてコメントしたい時-->
              <div>
                <%= form_with model: [@comment] do |f| %>
                  <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
                  <%= f.submit "送信する" %>
                <% end %>
              </div>

            </table>
        </div>
    </div>
</div>
