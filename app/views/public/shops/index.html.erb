<div class='container'>
  <div class='row'>
    <div class='col-md-3'></div>
        <p id= "notice"></p>
        <div class='col-md-8 offset-md-1'>
            <h1>投稿一覧</h1>
            <table class = "table table-hover table-inverse">
                <thead>
                  <tr>
                    <th>投稿者名</th>
                    <th>店名</th>
                    <!--<th>投稿者の感想</th>-->
                    <!--#感想はレイアウトが狭くなるから詳細見てもらう-->
                    <th>店舗トップ画像</th>
                    <th>コメント件数</th>
                  </tr>
                </thead>
                <tbody>
                <% @shops.each do |shop| %>
                <tr>
                    <td><%= link_to shop.end_user.name, public_end_user_path(shop.end_user.id) %></td>
                    <td><%= link_to shop.title, public_shop_path(shop.id) %></td>
                    <!--<td><%= shop.body %></td>-->
                    <td>
                      <% if shop.image.attached? %>
                        <%= image_tag shop.image, size: "100x100" %>
                      <% else %>
                        <%= image_tag 'no_image', size: "100x100" %>
                      <% end %>
                    </td>
                    <td><%= link_to "#{shop.comments.count}コメント", public_shop_comments_path(shop.id) %></td>
                </tr>
                <% end %>
                </tbody>
            </table>
          </div>
        </div>
    </div>
</div>
